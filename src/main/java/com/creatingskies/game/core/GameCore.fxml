								<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
							</rowConstraints>
							<children>
								<Label fx:id="durationLabel" text="0.0" GridPane.columnIndex="1" />
								<Label fx:id="obstacleSlowLabel" text="0.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
								<Label fx:id="countDownLabel" text="0.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
								<Label text="Duration" />
								<Label text="Slow Factor" GridPane.rowIndex="1" />
								<Label text="Countdown" GridPane.rowIndex="2" />
							</children>
						</GridPane>
					</children>
					<padding>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</padding>
				</VBox>
            <ScrollPane>
               <content>
                  <Pane fx:id="pane">
                     <children>
                        <GridPane fx:id="mapTiles" />
                     </children>
                  </Pane>
               </content>
            </ScrollPane>
			</children>
		</HBox>
	</children>
</AnchorPane>
